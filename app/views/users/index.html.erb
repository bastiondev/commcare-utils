<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Users</h1>
  <%= link_to 'New User', new_user_path, class: 'btn btn-outline-primary' %>
</div>

<% if @users.any? %>
  <div class="table-responsive">
    <table class="table table-sm table-striped table-bordered">
      <thead>
        <tr>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td>
              <%= link_to 'Show', user_path(user), class: 'btn btn-sm btn-outline-primary' %>
              <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-sm btn-outline-primary' %>
              <%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="alert alert-info">
    No users found. <%= link_to 'Create one', new_user_path %>
  </div>
<% end %>
